# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~~

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Home page
GET     /                           controllers.HomeController.index()

# Authentication routes
GET     /login                      controllers.AuthController.login()
POST    /login                      controllers.AuthController.authenticate()
GET     /register                   controllers.AuthController.register()
POST    /register                   controllers.AuthController.create()
GET     /logout                     controllers.AuthController.logout()

# Tea routes
GET     /teas                       controllers.TeaController.index()
GET     /teas/new                   controllers.TeaController.create()
POST    /teas                       controllers.TeaController.save()
GET     /teas/:id                   controllers.TeaController.show(id: Long)
GET     /teas/:id/edit              controllers.TeaController.edit(id: Long)
PUT     /teas/:id                   controllers.TeaController.update(id: Long)
DELETE  /teas/:id                   controllers.TeaController.delete(id: Long)

# Profile routes
GET     /profile                    controllers.TeaController.profile()
POST    /profile                    controllers.TeaController.updateProfile()
POST    /profile/password           controllers.TeaController.updatePassword()

# Error pages
GET     /error/forbidden            controllers.ErrorController.forbidden() 