# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting

# Home page
GET     /                           controllers.HomeController.index()

# Authentication
GET     /login                      controllers.AuthController.login()
POST    /login                      controllers.AuthController.loginSubmit()
GET     /logout                     controllers.AuthController.logout()
GET     /signup                     controllers.AuthController.signup()
POST    /signup                     controllers.AuthController.signupSubmit()

# User profile
GET     /profile                    controllers.UserController.profile()
POST    /profile/update             controllers.UserController.updateProfile()
POST    /profile/change-password    controllers.UserController.changePassword()

# Tea management
GET     /api/teas                   controllers.TeaController.index
GET     /api/teas/:id               controllers.TeaController.show(id: Long)
POST    /api/teas                   controllers.TeaController.create
PUT     /api/teas/:id               controllers.TeaController.update(id: Long)
DELETE  /api/teas/:id               controllers.TeaController.delete(id: Long)
POST    /api/teas/:id/image         controllers.TeaController.uploadImage(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset) 